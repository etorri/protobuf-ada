with "protobuff.gpr";
with "aunit.gpr";

project ProtoBuff.Test is

   type Boolean is ("True", "False");
   Generate : Boolean := external ("GENERATE", "False");
   for Source_Dirs use ("src/**");
   for Object_Dir use ".obj";
   for Exec_Dir use "bin";
   for Languages use ("Ada", "Protocoll Buffers");

   package Builder is
      for Switches ("ada") use ("-k", "-j0");
   end Builder;

   package Compiler is
      case Generate is
         when "True" =>
            for Driver ("protocoll buffers") use "protoc";
            for Driver ("ada") use "";

         when "False" =>
            for Driver ("protocoll buffers") use "";
      end case;
      for Switches ("Ada") use ("-gnatQ", "-fcallgraph-info=su,da", "-O2", "-fstack-check");
      for Switches ("Protocoll Buffers") use ("--ada-out=" & project'Project_Dir & "src/gen");
   end Compiler;

   package Naming is
      for Body_Suffix ("protocoll buffers") use ".proto";
   end Naming;

end ProtoBuff.Test;
